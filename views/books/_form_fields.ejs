<div class="form-group my-2">
  <label for="title">Title</label>
  <input
    type="text"
    class="form-control"
    id="title"
    name="title"
    aria-describedby="title"
    placeholder="Enter Book Title"
  />
</div>

<div class="form-group my-2">
  <label for="authors">Author</label>
  <select class="form-control" id="authors" name="author">
    <% authors.forEach(author => { %> <% if (book.author === author.id) { %>
    <option value="<%= author.id %>" selected><%= author.name %></option>
    <% } else { %>
    <option value="<%= author.id %>"><%= author.name %></option>
    <% } %> <% }) %>
  </select>
</div>

<div class="form-group my-2">
  <label for="publishedDate"></label>
  <input
    type="date"
    name="publishedDate"
    class="form-control"
    id="publishedDate"
    value="<%= book.publishedDate == null ? '' : book.publishedDate.toISOString().split('T')[0] %>"
  />
</div>

<div class="form-group my-2">
  <label for="page_count">Page Count</label>
  <input
    type="number"
    name="pageCount"
    class="form-control"
    id="page_count"
    value="<%= book.pageCount %>"
    min="1"
    required
  />
</div>

<div class="form-group my-2">
  <label for="cover">Cover</label>
  <input
    type="file"
    name="cover"
    class="form-control filepond"
    id="page_count"
    required
  />
</div>

<div class="form-group my-2">
  <label for="description">Description</label>
  <textarea class="form-control" name="description" id="description" rows="3">
<%= book.description %></textarea
  >
</div>
